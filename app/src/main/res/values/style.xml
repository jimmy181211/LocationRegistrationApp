<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="input_box_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@drawable/login_bg</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="contentDescription">@string/app_name</item>
    </style>

    <style name="input_box_img_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="contentDescription">@string/app_name</item>
    </style>

    <style name="login_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#cc6da2a8</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="login_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="main_widget_style">
        <item name="android:layout_width">@dimen/widget_size</item>
        <item name="android:layout_height">@dimen/widget_size</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="back_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#6da2a8</item>
        <item name="navigationIcon">@drawable/baseline_arrow_back_24</item>
    </style>

    <style name="warning_level_color_style">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="contentDescription">@string/app_name</item>
    </style>

    <style name="warning_level_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize"> 15sp</item>
        <item name="android:layout_marginStart">6dp</item>
    </style>

    <style name="warning_level_layout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>